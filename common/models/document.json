{
  "name": "document",
  "base": "PersistedModel",
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "isPage": {
      "type": "boolean",
      "default": false
    },
    "url": {
      "type": "string",
      "required": true,
      "index": {"unique": true}
    },
    "image": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "default": "draft"
    },
    "markdown": {
      "type": "string",
      "required": true
    },
    "html": {
      "type": "string"
    },
    "createdAt": {
      "type": "date"
    },
    "updatedAt": {
      "type": "date"
    },
    "authorId": {
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "updater": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "updatedBy"
    },
    "tags": {
      "type": "hasAndBelongsToMany",
      "model": "tag"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "create",
        "find",
        "findById",
        "findAll"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "deleteById",
        "updateAttributes",
        "updateAll",
        "upsert",
        "publish",
        "unpublish"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "indexes": {
    "isPage_status_index": {
      "keys": {
        "isPage": 1,
        "status": 1
      }
    }
  }
}
