.container-fluid
  .sidebar-header
    img.sidebar-header-icon(ng-src="{{ vm.currentUser.avatar }}")
    .sidebar-header-detail
      .sidebar-header-title {{ vm.blogSetting.title }}
      .sidebar-header-description {{ vm.currentUser.username }}
  ul.nav.nav-sidebar(ng-repeat="item in vm.sidebarMenu" sidebar-item="item")
  ul.sidebar-footer
    li.sidebar-footer-item
      a(ng-click="vm.render()") refresh blog
    li.sidebar-footer-item
      a(href='/') view blog
